<%= form_with model: @todo, local: true do |form| %>
  <% if @todo.errors.any? %>
    <div style='background-color: #ff8a8a; border: 1px solid red; border-radius: 5px'>
      <ul>
        <% @todo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label "Complete?" %>
    <%= form.check_box :complete %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
